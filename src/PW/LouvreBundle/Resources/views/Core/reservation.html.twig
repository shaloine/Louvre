{% extends "PWLouvreBundle::layout.html.twig" %}

{% block title %}
  Réservation - {{ parent() }}
{% endblock %}
{% block stylesheets %}
  {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.css"></script>
  {% endblock %}
{% block body %}
  <h3>tarifs</h3>
<p>Tarif normal : 16€</p>
<p>Tarif normal : 16€</p>
<h3>informations</h3>
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {{ form_errors(form) }}
<div class="hidden">
  {{ form_row(form.date) }}
  {{ form_row(form.demi) }}
  {{ form_row(form.nombre) }}
</div>

  {% for visitor in form.visitors %}

    <div class="well">
      <h3>Ticket</h3>
      {{ form_row(visitor.nom) }}
      {{ form_row(visitor.prenom) }}
      {{ form_row(visitor.pays) }}
      {{ form_row(visitor.dateNaissance) }}
      {{ form_row(visitor.reduit) }}

    </div>

  {% endfor %}
  
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
  {% javascripts '@PWLouvreBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
  <script>
    jQuery(document).ready(function() {
      $('.js-datepicker').datepicker({
        format: 'dd/mm/yyyy',
        startView: 2,
        language: 'fr',
      });
    });
  </script>
{% endblock %}